  <script>
    const trialMinutes = 10;
    const startKey = 'mindport_start_time';
    const paidKey = 'mindport_paid_user';

    function initTimer() {
      if (localStorage.getItem(paidKey)) return;

      let startTime = localStorage.getItem(startKey);
      if (!startTime) {
        startTime = Date.now();
        localStorage.setItem(startKey, startTime);
      } else {
        startTime = parseInt(startTime);
      }

      const interval = setInterval(() => {
        const now = Date.now();
        const diff = now - startTime;
        const minutesLeft = Math.max(0, trialMinutes - Math.floor(diff / 60000));
        const secondsLeft = 60 - Math.floor((diff / 1000) % 60);

        if (minutesLeft === 0 && secondsLeft <= 0) {
          document.getElementById("lockScreen").style.display = 'flex';
          clearInterval(interval);
        }

        document.getElementById("timer").innerText =
          String(minutesLeft).padStart(2, '0') + ":" + String(secondsLeft).padStart(2, '0');
      }, 1000);
    }

    function redirectToPay() {
      window.location.href = "https://paystack.com/pay/mindport200"; // replace with your real link
    }

    async function sendToAI() {
      const input = document.getElementById("userInput").value.trim();
      if (!input) return;

      document.getElementById("response").innerHTML = "ü§ñ Thinking...";

      try {
        const res = await fetch("/api/ask", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ prompt: input })
        });

        const data = await res.json();
        document.getElementById("response").innerHTML = "‚úÖ " + data.reply;
      } catch (err) {
        document.getElementById("response").innerHTML = "‚ö†Ô∏è Error contacting AI.";
      }
    }
  </script>
</body>
